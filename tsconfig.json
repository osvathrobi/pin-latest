{
    "compilerOptions": {
        "target": "es2015",
        "moduleResolution": "node",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": false,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "lib/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
