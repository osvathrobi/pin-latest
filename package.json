{
  "name": "pin-latest",
  "version": "0.0.2",
  "description": "Pin Latest",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "git@github.com:wulfmann/pin-latest.git",
  "author": "Joe Snell <joepsnell@gmail.com>",
  "license": "MIT",
  "private": false,
  "bin": {
    "pin-latest": "./dist/index.js"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.4.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.6"
  },
  "scripts": {
    "dev": "ncc build ./index.ts -w -o dist/",
    "prerelease": "rimraf ./dist/",
    "build": "ncc build ./lib/index.ts -o ./dist/ --minify --no-cache --no-source-map-register",
    "format": "prettier 'lib/**/*.ts' --write",
    "lint": "eslint ./lib --ext .ts"
  },
  "files": [
    "dist"
  ],
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  }
}
